#!/usr/bin/env node
//@ts-check

const { fork } = require("child_process");

function main() {
    fork(__dirname + "/../dist/lib/cli.js", process.argv.slice(2), {
        stdio: "inherit",
    }).on("exit", (code) => {
        // Watch restart required? Fork a new child
        if (code === 7) main();
        else process.exit(code || 0);
    });
}

main();
